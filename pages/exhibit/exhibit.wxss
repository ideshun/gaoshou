.informat{
  margin: 10rpx 20rpx;background: #fff;
}
.ex-cover{
  width: 100%;position: relative;overflow: hidden;
}
.ex-cover image{
  width: 100%;
}
.ex-int{
  position: absolute;bottom: 0;width: 100%;background: rgba(0, 0, 0, 0.4);
  padding: 0 15rpx;color: #fff;overflow: hidden;
}
.ex-btns{
  margin: 30rpx 20rpx;background: #fff;box-sizing: border-box;padding: 15rpx;border-radius: 15rpx;box-shadow: 2rpx 2rpx 2rpx 2rpx #ddd;overflow: hidden;
}
.ex-sponsor{
  overflow: hidden;width: 100%;padding: 10rpx 15rpx;box-sizing: border-box;
}
.ex-sponsor view{
  float: left;width: 48%;background: #2d2d2d;color: #fff;height: 80rpx;line-height: 80rpx ;text-align: center;font-size: 32rpx  ;border-radius: 15rpx;
}
.ex-sponsor view:nth-child(even){
  float: right;
}
.ex-patron{
  color: #fff;height: 80rpx;line-height: 80rpx ;text-align: center;border-radius: 15rpx;background: #2d2d2d;margin: 15rpx;box-sizing: border-box;
}
.ex-statistics{
  margin: 30rpx 20rpx;background: #fff;box-sizing: border-box;padding: 15rpx 10rpx;border-radius: 15rpx;box-shadow: 2rpx 2rpx 2rpx 2rpx #ddd;
}
.ex-statistics view{
  background: rgb(252, 198, 1);font-size: 26rpx;text-align: center;color: #fff;height: 80rpx;line-height: 80rpx;
}
.ex-list{
  overflow: hidden;margin-bottom: 30rpx;
}
.ex-cipate{
  float: left;width: 48%;margin-bottom: 20rpx;
}
.ex-cipate image{
  width: 100%;height: 340rpx;
}
.ex-cipate view{
  font-size: 26rpx;text-align: center;
}
.ex-btn{
  float: left;width: 48%;background: #2d2d2d;color: #fff;height: 80rpx;line-height: 80rpx ;text-align: center;font-size: 32rpx  ;border-radius: 15rpx;
}
.ex-btn:nth-child(even){
  float: right;
}
.ex-btn view{
  float: left;width: 48%;background: #2d2d2d;color: #fff;height: 80rpx;line-height: 80rpx ;text-align: center;font-size: 32rpx  ;border-radius: 15rpx;
}





