/**app.wxss**/
@import '/style/weui.wxss';
.isHidden{
  display: none !important;
}
.isRed{
  background: #F23030;
  color: #FFF;
}
.isOrange{
  background: #FF7214;
  color: #FFF;
}
.isYellow{
  background: #FCC601;
  color: #FFF;
}
.fr{
  float: right;
}
view{
	font-size: 16px;
}
.slide-image{
	width: 750rpx;
    height: 340rpx;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.page__modules{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 20rpx;
    padding: 20px 28rpx;
    border: 1px solid #f2f2f2;
    border-radius: 25rpx;
    box-shadow: 1px 1px 20px 1px #f2f2f2;
}
.cate_tab{
  padding: 3% 7%;
  border-radius: 10rpx;
  font-size: 18px;
  font-weight: 500;
}
.top_icon{
	text-align: center;
}
.top_icon image{
    margin: 10rpx 0;
	width: 100rpx;
	height: 100rpx;
	line-height: 100rpx;
}
.cate_icon {
	position: relative;
    color: #FFF;
}
.cate_icon image{
	width: 306rpx;
	height: 198rpx;
	line-height: 198rpx;
}

.cate_icon .cate_text{
	position: absolute;
	top: 50rpx;
	left: 0;
	width: 100%;
	text-align: center;
	line-height: 30px;
}
.cate_icon .cate_text_tit{
    font-size: 18px;
}
.cate_icon4 {
	width: 25%;
	text-align: center;
	margin: 15rpx 0;
}
.cate_icon4 image{
	margin: 10rpx;
	width: 68rpx;
	height: 68rpx;
	line-height: 68rpx;
}
.cate_tit{
	display: block;
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 22px;
	color: rgb(220,78,64);
	text-align: center;
	border-bottom: 1px solid #ddd;
	padding-bottom: 20rpx;
	margin-bottom: 30rpx;
}
.cate_icon5{
	position: relative;
	margin: 10rpx 0;
}
.cate_icon5 .cate_text{
	position: absolute;
	top: 40rpx;
	width: 100%;
	text-align: center;
	color: #FFF;
	left: 0;
}
.cate_icon5 image{
	width: 310rpx;
	height: 175rpx;
	line-height: 175rpx;
}
.cate_icon5.full {
	width: 100%;
}
.cate_icon5.full image {
	width: 650rpx;
	height: 230rpx;
}
.cate_icon5.full .cate_text {
	top: 150rpx;
}
.eventsItem,.worksItem{
  width: 46%;
  padding: 2%;
}

.eventsItem .listInfo,.worksItem .listInfo{
  font-size: 14px;
  color: gray;
}

.eventsItem image,.worksItem image{
  width: 100%;
}
.eventsItem image{
  height: 224rpx;
}
.worksItem image{
  height: 420rpx;
}